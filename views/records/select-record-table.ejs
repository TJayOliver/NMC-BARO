<!DOCTYPE html>
<html lang="en" class=" scroll-smooth">
<head>
    <%- include("../layout/head") %>
</head>
<body class=" min-h-screen p-0 m-0 select-none w-full bg-backgroundColorBlack overflow-x-hidden transition duration-500 ease-in">
   
    <%- include("../layout/header-smallscreen") %>

    <!-- Table -->
    <div class="flex flex-col p-6">
        <div class="-m-1.5">
            <div class="p-1.5 min-w-full w-[50%] inline-block align-middle">
                <div class="border rounded-lg divide-y divide-gray-200" >
                    <!-- Search Bar, Heading and Export -->
                    <div class="py-3 px-4">
                        <div class=" flex justify-between p-2">
                            <!-- Heading -->
                            <h1 class="flex justify-center text-center text-white fontcolorblack mt-3 gap-2">
                                <%= recordname %>   DATA BETWEEN   <%= datefrom%>   AND   <%= dateto %>
                            </h1>

                            <div  class="flex justify-center text-center text-white fontcolorblack mt-3 gap-2">TOTAL NUMBER: <%= total %>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Display Data -->
                    <div class="overflow-x-scroll">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class=" bg-ColorBlack text-white fontcolorblack tableheadcolor">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium">REGISTRATION NUMBER</th>
                                <th class="px-6 py-3 text-left text-xs font-medium">NAME</th>
                                <th class="px-6 py-3 text-left text-xs font-medium">SERVICE RENDERED</th>
                                <th class="px-6 py-3 text-left text-xs font-medium">AMOUNT PAID</th>
                                <th class="px-6 py-3 text-left text-xs font-medium">BANK</th>
                                <th class="px-6 py-3 text-left text-xs font-medium">RECEIPT NUMBER</th>
                                <th class="px-6 py-3 text-left text-xs font-medium">TRANSACTION REFERENCE NUMBER</th>
                                <th class="px-6 py-3 text-left text-xs font-medium">DATE OF REQUEST</th>
                            </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-200">
                            <tr>
                                <% if (data.length > 0){ %> 
                                    <% data.forEach(data => { %>  
                                        <tr class=" text-white fontcolorblack">
                                            <td class="px-6 py-4 text-left text-xs font-medium"><%= data.registration_number %></td>
                                            <td class="px-6 py-4 text-left text-xs font-medium"><%= data.first_name %> <%= data.middle_name %> <%= data.last_name %> </td>
                                            <td class="px-6 py-4 text-left text-xs font-medium"><%= data.request_type %></td>
                                            <td class="px-6 py-4 text-left text-xs font-medium"><%= data.amount_paid %></td>
                                            <td class="px-6 py-4 text-left text-xs font-medium"><%= data.bank %></td>
                                            <td class="px-6 py-4 text-left text-xs font-medium"><%= data.receipt_number %></td>
                                            <td class="px-6 py-4 text-left text-xs font-medium"><%= data.transaction_reference_number %></td>
                                            <td class="px-6 py-4 text-left text-xs font-medium"><%= data.date_of_request %></td>
                                        </tr>
                                    <% })%>
                                <% } else { %>
                                    <tr>
                                        <td class=" text-white text-center fontcolorblack" colspan="7">NO RECORDS FOUND</td>
                                    </tr>
                                <% } %>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script src="../../scripts/allPages.js"></script>
   
</body>
</html>
