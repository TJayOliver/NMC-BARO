<!DOCTYPE html>
<html lang="en" class="scroll-smooth overflow-x-hidden">

<head>
  <%- include("../layout/head") %>
</head>

<body class="min-h-screen p-0 m-0 select-none w-full bg-backgroundColorBlack transition duration-500 ease-in">
  <%- include("../layout/header-smallscreen") %>

  <%- include("../layout/formErrorMsg") %>

  <!-- confirm export -->
  <div id="confirm-export" class=" hidden bg-[rgb(25,24,24,0.8)] min-h-screen fixed top-0 z-50 min-w-full transition duration-200 ease-in-out">
        <div class="grid place-content-center z-10 drop-shadow-2xl relative top-52">
            <div class=" h-52 w-96 bg-white rounded-md drop-shadow-lg">
                <h2 class=" text-3xl text-center tracking-normal mt-4 text-black font-bold p-3">CONFIRM TO EXPORT
                </h2>
                <div class="flex justify-evenly align-middle mt-6">
                    <a href="/records/all-records-export" id="confirm-yes" class="bg-teal-600 hover:bg-teal-700 text-center text-xl text-white h-12 p-3 rounded-md cursor-pointer">
                    PROCEED
                    </a>
                    <a id="confirm-close" class="bg-red-600 hover:bg-red-700 text-center text-xl text-white h-12 p-3 rounded-md cursor-pointer">
                    CANCEL
                    </a>
                </div>
            </div>
        </div>
    </div>

  <!-- Table -->
  <div class="flex flex-col p-6">
    <div class="-m-1.5">
      <div class="p-1.5 min-w-full w-[50%] inline-block align-middle">
        <div class="border rounded-lg divide-y divide-gray-200" >

          <!-- Search Bar, Heading and Export -->
          <div class="py-3 px-4">
            <div class=" flex justify-between p-2">

              <!-- Heading -->
              <h1 class="flex justify-center text-center text-white fontcolorblack mt-3">TRANSACTIONS DATA</h1>

              <!-- Export Data -->
                <div id="export" class="rounded-lg bg-transparent border text-xs text-white fontcolorblack p-3 cursor-pointer hover:bg-white hover:text-black">
                  <p class="align-middle text-center mt-1">EXPORT TO EXCEL</p>
                </div>
            </div>
          </div>

          <!-- Display Table -->
          <div class="overflow-x-scroll overflow-y-scroll">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class=" bg-ColorBlack text-white fontcolorblack tableheadcolor">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-medium">NAME</th>
                  <th class="px-6 py-3 text-left text-xs font-medium">SERVICE RENDERED</th>
                  <th class="px-6 py-3 text-left text-xs font-medium">AMOUNT</th>
                  <th class="px-6 py-3 text-left text-xs font-medium">BANK</th>
                  <th class="px-6 py-3 text-left text-xs font-medium">RECEIPT NUMBER</th>
                  <th class="px-6 py-3 text-left text-xs font-medium">TRANSACTION REFERENCE NUMBER</th>
                  <th class="px-6 py-3 text-left text-xs font-medium">DATE</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200">
                <tr>
                    <% const data = registration.concat(registrationPenalty, pinainrenewal,certificate, duplicate,amendment, requestforcertificate,resultsslip, requestforlogbook,reengagement,replacement, examinerspack, verification) %>
                    <% data.forEach(data => { %>
                    <tr class=" text-white fontcolorblack">
                        <% if(data.request_type !== 'NO'){ %>
                            <td class="px-6 py-4 text-left text-xs font-medium"><%= data.first_name%> <%=data.middle_name %> <%=data.last_name %></td>
                        <% }else{ %><% } %> 

                        <% if(data.request_type !== 'NO'){ %>
                            <td class="px-6 py-4 text-left text-xs font-medium"><%= data.request_type %></td>
                        <% }else{ %><% } %> 

                        <% if(data.request_type !== 'NO'){ %>
                            <td class="px-6 py-4 text-left text-xs font-medium"><%= data.amount_paid %></td>
                        <% }else{ %><% } %>

                        <% if(data.request_type !== 'NO'){ %>
                            <td class="px-6 py-4 text-left text-xs font-medium"><%= data.bank %></td>
                        <% }else{ %><% } %>

                        <% if(data.request_type !== 'NO'){ %>
                            <td class="px-6 py-4 text-left text-xs font-medium"><%= data.receipt_number %></td>
                        <% }else{ %><% } %>

                        <% if(data.request_type !== 'NO'){ %>
                            <td class="px-6 py-4 text-left text-xs font-medium"><%= data.transaction_reference_number %></td>
                        <% }else{ %><% } %>

                        <% if(data.request_type !== 'NO'){ %>
                            <td class="px-6 py-4 text-left text-xs font-medium"><%= data.date_of_request %></td>
                        <% }else{ %><% } %>
                    </tr>
                    <% }) %>
                    
                </tr>
              </tbody>
            </table>
          </div>

        </div>
      </div>
    </div>
  </div>

  <script src="../../scripts/allPages.js"></script>
  <script src="../../scripts/confirmexport.js"></script>
</body>

</html>