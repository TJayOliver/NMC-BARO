<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles/styles.css">
    <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon">
    <title>ADMINISTRATOR</title>
</head>

<body class=" box-border bg-black select-none relative grid place-content-center">

    <div class=" bg-white shadow-xl w-5/6 h-[350px] rounded-2xl relative top-24 left-10 lg:top-[50%] grid place-content-center">

        <!-- NMC LOGO -->
        <div id="logo" class=" bg-white shadow-md h-20 w-20 absolute rounded-full grid place-content-center left-[40%] -top-12 ">
            <img src="/images/nursing-and-midwifery-council.png" class=" h-14 absolute top-3 left-3">
        </div>

        <!-- NMC HEADING -->
        <div class=" flex justify-center p-2">
            <h3 class=" text-xl text-center mt-10 text-black font-semibold">ADMIN - BARO</h3>
        </div>

        <form action="/administrator" method="post" class=" p-4">

            <% if (loginpageMsg && loginpageMsg.length > 0) { %>

                <div id="box" class=" bg-red-600 p-3 rounded-md transition ease-in-out text-white ">
                    <%= loginpageMsg %> 
                    <div id="close" class=" text-white text-4xl float-right -mt-2 cursor-pointer">&times;</div>
                </div>

            <% } %>

            <input 
            type="text" 
            placeholder="Enter Username"
            name="username"
            class="  text-black border-b-black border-b-2 rounded-sm w-full mb-4">

            <input 
            type="password"
            name="password" 
            placeholder="Enter Password"
            class="  text-black border-b-black border-b-2 rounded-sm w-full">

            <button 
            type="submit" 
            id="login"
            class=" w-full bg-ColorBlack rounded-lg p-4 text-white mt-5 hover:bg-HoverColorBlack">ACCESS</button>
        </form>
    </div>

    <script>
        const box = document.getElementById('box'), 
        times = document.getElementById('close');
        times.addEventListener('click', ()=>{
            box.style.display = 'none';
        })
    </script>

</body>

</html>