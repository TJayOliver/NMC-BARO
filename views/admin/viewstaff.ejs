<!DOCTYPE html>
<html lang="en" class=" scroll-smooth">
<head>
    <%- include("../layout/head") %>
</head>
<body class=" min-h-screen p-0 m-0 select-none w-full bg-backgroundColorBlack overflow-x-hidden transition duration-500 ease-in">
    
    <%- include("../layout/header-smallscreen") %>

    <%- include("../layout/formErrorMsg") %>

    <!-- Table -->
  <div class="flex flex-col p-6">
    <div class="-m-1.5">
      <div class="p-1.5 min-w-full w-[50%] inline-block align-middle">
        <div class="border rounded-lg divide-y divide-gray-200" >

          <!-- Heading -->
          <div class="py-3 px-4">
            <div class=" text-center p-2">

              <!-- Heading -->
              <h1 class="flex justify-center text-center text-white fontcolorblack mt-3">STAFF LIST</h1>

            </div>
          </div>

          <!-- Display Table -->
          <div>
            <table class="min-w-full divide-y divide-gray-200">
              <thead class=" bg-ColorBlack text-white fontcolorblack tableheadcolor">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium">ACTION</th>
                    <th class="px-6 py-3 text-left text-xs font-medium">NAME</th>
                    <th class="px-6 py-3 text-left text-xs font-medium">USERNAME</th>
                    <th class="px-6 py-3 text-left text-xs font-medium">ROLE</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200">
                <tr>
                  <% if (data.length> 0){ %> 
                    <% for(data of data){ %>
                    <tr class=" text-white fontcolorblack">
                      <td>
                        <span class="flex gap-3 p-3">
                          <a href="/edit-staff/<%= data.id %>" class="bg-blue-600 hover:bg-blue-700 p-2 rounded-md btns cursor-pointer">
                              <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="white" class="bi bi-pencil-square" viewBox="0 0 16 16">
                              <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                              <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                            </svg>
                          </a>
                          <a href="/delete-staff/<%= data.id %>" class="bg-red-600 hover:bg-red-700 p-2 rounded-md btns cursor-pointer">
                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="white" class="bi bi-trash3-fill" viewBox="0 0 16 16">
                              <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5Zm-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5ZM4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06Zm6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528ZM8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5Z"/>
                            </svg>
                          </a>
                        </span>
                      </td>
                      <td class="px-6 py-4 text-left text-xs font-medium"><%= data.name %></td>
                      <td class="px-6 py-4 text-left text-xs font-medium"><%= data.username %></td>
                      <td class="px-6 py-4 text-left text-xs font-medium"><%= data.role %></td>
                    </tr>
                    <% } %>
                  <% }else{ %>
                    <td class=" fontcolorblack text-white" colspan="3">NO STAFF</td>
                  <% } %>
              </tbody>
            </table>
          </div>

        </div>
      </div>
    </div>
  </div>

  <script src="/scripts/allPages.js"></script>

</body>
</html>