<!DOCTYPE html>
<html lang="en" class=" scroll-smooth">
<head>
    <%- include("../layout/head") %>
</head>
<body class=" min-h-screen p-0 m-0 select-none w-full bg-backgroundColorBlack overflow-x-hidden transition duration-500 ease-in">
    <%- include("../layout/header-smallscreen") %>

    <% if(action == 'ADD'){ %> 

        <%- include("../layout/formErrorMsg") %>

    <!-- Forms Section -->
    <div id="container" class=" flex justify-center align-middle mt-5">
        <form action="/request-for-pin-ain" method="post" class=" mt-2 w-full max-w-3xl p-2 lg:max-w-3xl xxl:max-w-5xl">

            <!-- Heading -->
            <div class=" relative flex bg-ColorBlack headsubmit p-8 rounded-md">
                <div class=" flex justify-center align-middle mx-auto space-x-2">
                    <span><img src="/images/main/requestforpin.png" class=" hidden md:flex h-10 relative -top-1"></span>
                    <h2 class=" text-2xl  text-white align-middle justify-center">PIN/AIN REQUEST FORM</h2>
                </div>
            </div>
            
            <!-- First Row -->
            <div class=" flex flex-col lg:flex ">
                <!-- Registration Number -->
                <div class="  mt-5 mb-5 mx-0 relative">
                    <label for="registration#" class=" text-white text-xl fontcolorblack">REGISTRATION NUMBER</label>
                    <input 
                    type="text" 
                    id="registration#"
                    name="registrationNumber" 
                    placeholder="Enter Registration Number"
                    class="  w-full text-white border-white text-lg rounded-lg  placeholder:tracking-wide p-3 xl:p-5 fontcolorblack" required>
                </div>
            </div>  
            
            <!-- Second Row -->
            <div  class=" flex flex-col lg:flex lg:flex-row lg:gap-10 mt-2 xl:mt-8 ">
                <!-- Request Type -->
                <div  class=" mt-1 mb-5 mx-0">
                    <label for="request" class=" text-white text-xl fontcolorblack">REQUEST TYPE</label>
                    <select id="request" name="requestType" class=" w-full p-3 xl:p-5 rounded-lg text-lg placeholder:tracking-wide " required >
                        <option value="" disabled selected>-- Select Type --</option>
                        <option class=" text-black" value="REQUEST FOR AIN">REQUEST FOR AIN</option>
                        <option class=" text-black" value="REQUEST FOR PIN">REQUEST FOR PIN</option>
                    </select>
                </div>
            </div>
            
            <!-- Submit Button-->
            <button 
                type="submit" 
                id="next" 
                value="SUBMIT" 
                class=" w-full text-white bg-ColorBlack headsubmit hover:bg-HoverColorBlack rounded-lg text-xl cursor-pointer p-3 mt-5">SUBMIT
            </button>
        </form>
    </div>

    <% } else if(action == 'EDIT'){ %>

        <%- include("../layout/formErrorMsg") %>

        <!-- Forms Section -->
        <div id="container" class=" flex justify-center align-middle mt-5">

        <% data.forEach(data =>{ %>

            <form action="/request-for-pin-ain/edit/<%=data.id%>" method="post" class=" mt-2 w-full max-w-3xl p-2 lg:max-w-3xl xxl:max-w-5xl">

                <!-- Heading -->
                <div class=" relative flex bg-ColorBlack headsubmit hover:bg-HoverColorBlack  p-8 rounded-md">
                    <div class=" flex justify-center align-middle mx-auto space-x-2">
                        <span><img src="/images/main/requestforpin.png" class=" hidden md:flex h-10 relative -top-1"></span>
                        <h2 class=" text-2xl  text-white align-middle justify-center">EDIT PIN/AIN REQUEST FORM</h2>
                    </div>
                </div>
                
                <!-- First Row -->
                <div class=" flex flex-col lg:flex ">
                    <!-- Registration Number -->
                    <div class="  mt-5 mb-5 mx-0 relative">
                        <label for="registration#" class=" text-white text-xl fontcolorblack">REGISTRATION NUMBER</label>
                        <input 
                        type="text" 
                        id="registration#"
                        name="registrationNumber" 
                        value="<%= data.registration_number %>"
                        placeholder="Enter Registration Number"
                        class="  w-full text-white border-white text-lg rounded-lg  placeholder:tracking-wide p-3 xl:p-5 fontcolorblack" required>
                    </div>
                </div>  
                
                <!-- Second Row -->
                <div  class=" flex flex-col lg:flex lg:flex-row lg:gap-10 mt-2 xl:mt-8 ">
                    <!-- Request Type -->
                    <div  class=" mt-1 mb-5 mx-0">
                        <label for="request" class=" text-white text-xl fontcolorblack">REQUEST TYPE</label>
                        <select id="request" name="requestType" class=" w-full p-3 xl:p-5 rounded-lg text-lg placeholder:tracking-wide " required >
                            <option value="" disabled selected>-- Select Type --</option>
                            <option class=" text-black" value="REQUEST FOR AIN">REQUEST FOR AIN</option>
                            <option class=" text-black" value="REQUEST FOR PIN">REQUEST FOR PIN</option>
                        </select>
                    </div>
                </div>

                <!-- Submit Button-->
                <button 
                    type="submit" 
                    id="next" 
                    value="SUBMIT" 
                    class=" w-full text-white bg-ColorBlack headsubmit hover:bg-HoverColorBlack rounded-lg text-xl cursor-pointer p-3 mt-5">SUBMIT
                </button>

                <script>
                    document.getElementById('request').value = '<%= data.request_type %>'
                </script>
            </form>

        <% }) %>

        </div>
    
    <% } %>


    <script src="../../scripts/allPages.js"></script>
</body>
</html>
